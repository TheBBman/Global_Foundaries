$ TMA TSUPREM4 PN Junction simulation

$ Define the grid
MESH       GRID.FAC=0.5
$METHOD     ERR.FAC=2.0

$ Read the mask definition file
MASK       IN.FILE=pn_junction.tl1 

$ Initialize the structure
INITIALIZE <100>  BORON=1E15

$ Initial oxidation
DIFFUSION  TIME=30  TEMP=1250  DRY HCL=5

$ Oxide deposition and Well region mask
DEPOSIT    PHOTORESIST  POSITIVE  THICKNESS=1
EXPOSE     MASK=NWell
DEVELOP
ETCH       OXIDE        TRAP  THICKNESS=1.5 UNDERCUT=0.1
ETCH       PHOTORESIST  ALL
DEVELOP

$ Arsenic implantation (n-type)
IMPLANT    Arsenic  DOSE=6E12  ENERGY=50
DEPOSIT    PHOTORESIST  POSITIVE  THICKNESS=1
EXPOSE MASK=PContact
ETCH       OXIDE        TRAP  THICKNESS=1.5 UNDERCUT=0.1
ETCH       PHOTORESIST  ALL
DEVELOP

DEPOSIT ALUMINUM THICKNESS=0.5
EXPOSE MASK=Contacts
DEVELOP
ETCH ALUMINUM TRAP THICKNESS=1.5
ETCH PHOTORESIST ALL

ELECTRIC X=5 JCAP JUNCTION=2 V="0 3 0.05"

$ Save structure
SAVEFILE   OUT.FILE=PN_JUNCTION

savefile out.f=pn_junction.tif tif

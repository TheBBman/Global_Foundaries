$ TMA TSUPREM4 NMOS transistor simulation
$   Part a:  Through field oxidation

$ Define the grid
MESH       GRID.FAC=0.5
$METHOD     ERR.FAC=2.0

$ Read the mask definition file
MASK       IN.FILE=bjt.tl1

$ Initialize the structure
INITIALIZE <100>  BORON=1E15

$ Forming Base
DEPOSIT    PHOTORESIST  POSITIVE  THICKNESS=3
EXPOSE     MASK=Base
DEVELOP

IMPLANT Arsenic DOSE=1E14 ENERGY=100
DIFFUSION TIME=30 TEMP=1100

$ Forming emitter
DEPOSIT    PHOTORESIST  POSITIVE  THICKNESS=1
EXPOSE     MASK=Emitter
DEVELOP

IMPLANT  Boron Dose=6E15  ENERGY=20
ETCH       PHOTORESIST  ALL
DIFFUSION TIME=10 TEMP=900

DEPOSIT ALUMINUM THICKNESS=0.5
DEPOSIT PHOTORESIST NEGATIVE THICKNESS=1.0
EXPOSE MASK=Contact
DEVELOP
ETCH ALUMINUM TRAP THICKNESS=1.5
ETCH PHOTORESIST ALL

$ Save structure
SAVEFILE   OUT.FILE=bjt.tif tif